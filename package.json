{
  "name": "pr-chart",
  "version": "1.0.0",
  "arc": {
    "app": "pr-chart",
    "description": "Show pull requests for a project visually",
    "http": {
      "/": {
        "method": "get",
        "src": "dist/http/get-index"
      },
      "/api/v1/pull-request-summary": {
        "method": "get",
        "src": "dist/http/get-ap1-v1-pull-request-summary"
      },
      "/*": {
        "method": "get",
        "src": "dist/http/get-catchall"
      }
    },
    "static": {
      "fingerprint": true
    }
  },
  "scripts": {
    "build": "tsc -w",
    "sandbox": "arc sandbox",
    "test": "jest",
    "start": "run-p build sandbox",
    "deploy": "npm run build && npx arc deploy"
  },
  "dependencies": {
    "@architect/architect": "^8.3.7",
    "@octokit/rest": "^18.0.12",
    "npm-run-all": "^4.1.5"
  },
  "devDependencies": {
    "jest": "^26.6.3",
    "ts-jest": "^26.4.4",
    "typescript": "^4.1.2"
  }
}
